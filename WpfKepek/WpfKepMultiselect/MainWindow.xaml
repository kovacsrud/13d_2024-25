<Window x:Class="WpfKepMultiselect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKepMultiselect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="kep1" />
        <Image x:Name="kep2" Grid.Column="1"/>
        <Image x:Name="kep3" Grid.Row="1"/>
        <Image x:Name="kep4" Grid.Row="1" Grid.Column="1"/>

        <Button x:Name="buttonBetolt" Content="Megnyitás" Width="150" Height="30" FontSize="20" Grid.Row="2" Grid.ColumnSpan="2" Click="buttonBetolt_Click"/>

    </Grid>
</Window>
